<div class="container">
  <h1 class="mt-5">Search Foods</h1>

  <%= form_with(url: foods_path, method: "get", class: "mt-3") do %>
    <div class="input-group mb-3">
      <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Enter food name" %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="mt-3">
    <h2>Search Results:</h2>
    <% @foods.each do |food| %>
      <%= link_to food['description'], food_path(food['fdcId']) %><br>
    <% end %>
  </div>
</div>
